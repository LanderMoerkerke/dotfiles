# -----------------------------------------------------------------------------------------------------------------------------
# GENERAL
# -----------------------------------------------------------------------------------------------------------------------------

# Super Key
set $mod Mod4
font pango:open-sans 8

floating_modifier $mod
hide_edge_borders both
focus_follows_mouse no
mouse_warping none

new_window pixel
workspace_layout default

# hide_edge_borders smart
popup_during_fullscreen smart

# -----------------------------------------------------------------------------------------------------------------------------
# SCRATPAD Tmux
# -----------------------------------------------------------------------------------------------------------------------------

for_window [instance="scratch_tmux"] floating enable
for_window [instance="scratch_tmux"] resize set 700 700
for_window [instance="scratch_tmux"] move scratchpad
for_window [instance="scratch_tmux"] border pixel 0
for_window [instance="scratch_tmux"] sticky enable

bindsym $mod+t		        	exec --no-startup-id ddspawn scratch_tmux

# -----------------------------------------------------------------------------------------------------------------------------
# SCRATPAD math
# -----------------------------------------------------------------------------------------------------------------------------

for_window [instance="scratch_math"] floating enable
for_window [instance="scratch_math"] resize set 625 450
for_window [instance="scratch_math"] move scratchpad
for_window [instance="scratch_math"] border pixel 0
for_window [instance="scratch_math"] sticky enable

bindsym $mod+m		        	exec --no-startup-id ddspawn scratch_math

# -----------------------------------------------------------------------------------------------------------------------------
# SCRATPAD caprine
# -----------------------------------------------------------------------------------------------------------------------------

for_window [instance="caprine"] floating enable
for_window [instance="caprine"] resize set 625 700
for_window [instance="caprine"] move scratchpad
for_window [instance="caprine"] border pixel 0
for_window [instance="caprine"] sticky enable

bindsym $mod+Shift+m			exec --no-startup-id ddspawn caprine

# -----------------------------------------------------------------------------------------------------------------------------
# COLORS
