# colors
set $bgcolor 393939
set $fgcolor 48B685
set $txtcolor DFEFE2
set $urgent EF6155

set $bg-color               #203030
set $active-bg-color        #405659
set $inactive-bg-color      #203030
set $text-color             #eeeeee
set $inactive-text-color    #676E7D
set $urgent-bg-color        #E53935

# class                 border              backgr.             text                    indicator   child_border
client.focused          $active-bg-color    $active-bg-color    $active-bg-color        #586e75
client.unfocused        $inactive-bg-color  $inactive-bg-color  $inactive-text-color    #586e75
client.focused_inactive $inactive-bg-color  $inactive-bg-color  $inactive-text-color    #586e75
client.urgent           $urgent-bg-color    $urgent-bg-color    $text-color             #586e75
# client.placeholder      #000000             #0c0c0c             #ffffff                 #000000     #0c0c0c
# client.background       #ffffff

# class                 border  backgr. text    indicator child_border
client.focused          #ffffff #25252c #ffffff #2e9ef4   #FFFFFF
client.focused_inactive #333333 #5f676a #ffffff #484e50   #5f676a
client.unfocused        #333333 #222222 #888888 #292d2e   #222222
client.urgent           #2f343a #900000 #ffffff #900000   #900000

# -----------------------------------------------------------------------------------------------------------------------------
# GENERAL BINDINGS AND MOVEMENTS
# -----------------------------------------------------------------------------------------------------------------------------

bindsym Mod1+F4             kill
bindsym $mod+c              kill

bindsym $mod+Return         exec $TERMINAL
bindsym $mod+Shift+Return	exec --no-startup-id samedir

Bindsym $mod+BackSpace          exec flash-active
Bindsym $mod+Shift+BackSpace    exec transset-df -a -x 1
# bindsym $mod+d              exec rofi -show run -lines 3 -eh 2 -width 100 -padding 800 -modi run -bw 0 -bc "$bgcolor" -bg "$bgcolor" -fg "$txtcolor" -font "open-sans 9" -terminal urxvt -hlbg "$bgcolor" -hlfg "#9575CD"
bindsym $mod+d exec --no-startup-id rofi -show drun -terminal $TERMINAL -width 25

# switching window with win+tab
bindsym $mod+Tab exec --no-startup-id rofi -show window -width 25

# bindsym $mod+Tab            workspace next
# bindsym $mod+Shift+Tab      workspace prev
bindsym Mod1+Tab workspace back_and_forth


# change focus
bindsym $mod+h              focus       left
bindsym $mod+j              focus       down
bindsym $mod+k              focus       up
bindsym $mod+l              focus       right

# move
bindsym $mod+Shift+h        move        left
bindsym $mod+Shift+j        move        down
bindsym $mod+Shift+k        move        up
bindsym $mod+Shift+l        move        right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

bindsym $mod+n              split       h
bindsym $mod+v              split       v

# change container layout
bindsym $mod+s              layout      stacking
bindsym $mod+z              layout      tabbed
bindsym $mod+e              layout      toggle      split

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

bindsym $mod+p exec passmenu -i
bindsym $mod+Shift+p exec enpass showassistant

bindsym $mod+Next exec variety -n
bindsym $mod+Prior exec variety -p

