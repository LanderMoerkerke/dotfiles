# -----------------------------------------------------------------------------------------------------------------------------
# EXECUTION
# -----------------------------------------------------------------------------------------------------------------------------

bindsym $mod+x              exec --no-startup-id lockscreen
bindsym $mod+Shift+x		exec --no-startup-id lockscreen
bindsym $mod+Shift+e		exec --no-startup-id rofi-emoji
bindsym $mod+r              exec $TERMINAL -e "ranger"
bindsym $mod+Shift+n        exec $TERMINAL2 -e "neomutt"
bindsym $mod+Shift+v        exec $TERMINAL -e "nvim"
bindsym $mod+b              exec $BROWSER
bindsym $mod+Shift+b        exec $BROWSER2

# -----------------------------------------------------------------------------------------------------------------------------
# RESIZE
# -----------------------------------------------------------------------------------------------------------------------------

bindsym $mod+y resize shrink width 5 px or 5 ppt
bindsym $mod+u resize grow height 5 px or 5 ppt
bindsym $mod+i resize shrink height 5 px or 5 ppt
bindsym $mod+o resize grow width 5 px or 5 ppt

# Gaps
bindsym $mod+Shift+w mode "$mode_gaps"

mode "$mode_gaps" {
    bindsym o       gaps outer current plus 5
    bindsym i       gaps inner current plus 5
    bindsym Shift+o gaps outer current minus 5
    bindsym Shift+i gaps inner current minus 5
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# -----------------------------------------------------------------------------------------------------------------------------
# FUNCTIONS KEYS
# -----------------------------------------------------------------------------------------------------------------------------

bindsym XF86PowerOff                exec power-menu

# Pulse Audio controls
bindsym XF86AudioRaiseVolume        exec --no-startup-id pactl -- set-sink-volume 0 +1% #increase sound volume
bindsym XF86AudioLowerVolume        exec --no-startup-id pactl -- set-sink-volume 0 -1% #decrease sound volume
bindsym XF86AudioMute               exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound

bindsym XF86MonBrightnessUp         exec light -A 3 # increase screen brightness
bindsym XF86MonBrightnessDown       exec light -U 3 # decrease screen brightness

bindsym XF86Display	            	exec --no-startup-id displayselect
bindsym Print 		            	exec --no-startup-id scrot ~/Pictures/Screenshots/%Y-%m-%d-%T-screenshot.png
bindsym Shift+Print             	exec --no-startup-id scrot -u ~/Pictures/Screenshots/%Y-%m-%d-%T-screenshot.png

bindsym Control+Print 		    	exec maim -u --format=png /dev/stdout | xclip -selection clipboard -t image/png -i
bindsym Control+Shift+Print     	exec maim -s -u --format=png /dev/stdout | xclip -selection clipboard -t image/png -i


# -----------------------------------------------------------------------------------------------------------------------------
# MISC
# -----------------------------------------------------------------------------------------------------------------------------

bindsym $mod+Insert		            exec --no-startup-id showclip
bindsym $mod+g                      exec echo $EMAIL_PRIMARY | xclip -selection clipboard -selection primary
bindsym $mod+Shift+g                exec echo $EMAIL_SECONDARY | xclip -selection clipboard -selection primary
bindsym $mod+Shift+f                exec gpgconf --reload gpg-agent

