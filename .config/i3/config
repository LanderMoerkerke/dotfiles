# -----------------------------------------------------------------------------------------------------------------------------
# GENERAL
# -----------------------------------------------------------------------------------------------------------------------------

# Super Key
set $mod Mod4
font pango:open-sans 8

floating_modifier $mod
hide_edge_borders both
focus_follows_mouse no
mouse_warping none

new_window pixel
workspace_layout default

hide_edge_borders smart
popup_during_fullscreen smart

# -----------------------------------------------------------------------------------------------------------------------------
# SCRATPAD math
# -----------------------------------------------------------------------------------------------------------------------------

for_window [instance="scratch_math"] floating enable
for_window [instance="scratch_math"] resize set 625 450
for_window [instance="scratch_math"] move scratchpad
for_window [instance="scratch_math"] border pixel 3
for_window [instance="scratch_math"] sticky enable

bindsym $mod+m		        	exec --no-startup-id ddspawn scratch_math

# -----------------------------------------------------------------------------------------------------------------------------
# SCRATPAD caprine
# -----------------------------------------------------------------------------------------------------------------------------

for_window [instance="caprine"] floating enable
for_window [instance="caprine"] resize set 625 700
for_window [instance="caprine"] move scratchpad
for_window [instance="caprine"] border pixel 3
for_window [instance="caprine"] sticky enable

bindsym $mod+Shift+m			exec --no-startup-id ddspawn caprine

# -----------------------------------------------------------------------------------------------------------------------------
# COLORS
# -----------------------------------------------------------------------------------------------------------------------------

# colors
set $bgcolor 393939
set $fgcolor 48B685
set $txtcolor DFEFE2
set $urgent EF6155


# -----------------------------------------------------------------------------------------------------------------------------
# GENERAL BINDINGS AND MOVEMENTS
# -----------------------------------------------------------------------------------------------------------------------------

bindsym Mod1+F4             kill
bindsym $mod+c              kill

bindsym $mod+Return         exec urxvt
# bindsym $mod+a   exec urxvt -cd /home/
Bindsym $mod+BackSpace      exec ~/.config/i3/flash_active.sh
# bindsym $mod+d              exec rofi -show run -lines 3 -eh 2 -width 100 -padding 800 -modi run -bw 0 -bc "$bgcolor" -bg "$bgcolor" -fg "$txtcolor" -font "open-sans 9" -terminal urxvt -hlbg "$bgcolor" -hlfg "#9575CD"
bindsym $mod+d exec --no-startup-id rofi -show drun -terminal urxvt -width 25

# switching window with win+tab
bindsym $mod+Tab exec --no-startup-id rofi -show window -width 25

# bindsym $mod+Tab            workspace next
# bindsym $mod+Shift+Tab      workspace prev
bindsym Mod1+Tab workspace back_and_forth


# change focus
bindsym $mod+h              focus       left
bindsym $mod+j              focus       down
bindsym $mod+k              focus       up
bindsym $mod+l              focus       right

# move
bindsym $mod+Shift+h        move        left
bindsym $mod+Shift+j        move        down
bindsym $mod+Shift+k        move        up
bindsym $mod+Shift+l        move        right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

bindsym $mod+n              split       h
bindsym $mod+v              split       v

# change container layout
bindsym $mod+s              layout      stacking
bindsym $mod+z              layout      tabbed
bindsym $mod+e              layout      toggle      split

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# bindsym Mod1+F4             kill

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle


