exec variety
exec compton -f --config ~/.config/compton/compton.conf -b
exec xset -b
exec redshift -l 51.01:4.03
exec dunst
exec udiskie &
exec --no-startup-id xss-lock -l -- bash ~/.config/i3/i3lock.sh

