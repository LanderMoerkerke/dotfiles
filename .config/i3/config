# -----------------------------------------------------------------------------------------------------------------------------
# EXECUTION
# -----------------------------------------------------------------------------------------------------------------------------

bindsym $mod+Shift+x        exec ~/.config/i3/i3lock.sh
bindsym $mod+Shift+e		exec --no-startup-id rofi-emoji

# -----------------------------------------------------------------------------------------------------------------------------
# RESIZE
# -----------------------------------------------------------------------------------------------------------------------------

bindsym $mod+y resize shrink width 5 px or 5 ppt
bindsym $mod+u resize grow height 5 px or 5 ppt
bindsym $mod+i resize shrink height 5 px or 5 ppt
bindsym $mod+o resize grow width 5 px or 5 ppt

# Gaps
bindsym $mod+Shift+g mode "$mode_gaps"

mode "$mode_gaps" {
    bindsym o       gaps outer current plus 5
    bindsym i       gaps inner current plus 5
    bindsym Shift+o gaps outer current minus 5
    bindsym Shift+i gaps inner current minus 5
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# -----------------------------------------------------------------------------------------------------------------------------
# FUNCTIONS KEYS
# -----------------------------------------------------------------------------------------------------------------------------

# Pulse Audio controls
bindsym XF86AudioRaiseVolume        exec --no-startup-id pactl -- set-sink-volume 0 +2% #increase sound volume
bindsym XF86AudioLowerVolume        exec --no-startup-id pactl -- set-sink-volume 0 -2% #decrease sound volume
bindsym XF86AudioMute               exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound

bindsym XF86MonBrightnessUp         exec light -A 5 # increase screen brightness
bindsym XF86MonBrightnessDown       exec light -U 5 # decrease screen brightness

bindsym XF86Display	            	exec --no-startup-id displayselect
bindsym Print 		            	exec --no-startup-id scrot ~/Pictures/Screenshots/%Y-%m-%d-%T-screenshot.png
bindsym Shift+Print             	exec --no-startup-id scrot -u ~/Pictures/Screenshots/%Y-%m-%d-%T-screenshot.png

bindsym Control+Print 		    	exec maim -u --format=png /dev/stdout | xclip -selection clipboard -t image/png -i
bindsym Control+Shift+Print     	exec maim -s -u --format=png /dev/stdout | xclip -selection clipboard -t image/png -i


# -----------------------------------------------------------------------------------------------------------------------------
# AUTOSTART APPLICATIONS
