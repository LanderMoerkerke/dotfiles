[module/wired-network]
type = internal/network
interface = enp0s31f6

[module/wireless-network]
type = internal/network
interface = wlp2s0

[module/date]
type = internal/date
interval = 1.0
date = %A, %d %B %H:%M
format =  <label>

[module/eth]
type = internal/network
interface = enp0s31f6
accumulate-stats = true

format-connected = <label-connected>
label-connected  = "%linkspeed%   %local_ip%      %downspeed%      %upspeed%    |"

format-disconnected = <label-disconnected>
# label-connected = " %linkspeed%  %downspeed%  %upspeed%"


[module/wlan]

type        = internal/network
interface   = wlp2s0
interval    = 3

format-connected                = <label-connected>
# format-connected-foreground     = ${colors.color12}
# format-disconnected-underline   = ${colors.alert}

label-connected                 = "%essid%  %signal%%     %local_ip%      %downspeed%      %upspeed%"
label-disconnected              = "  offline"


# label-disconnected-foreground   = ${colors.alert}
# ramp-signal-foreground          = ${colors.foreground-alt}

[module/ssid]

type = custom/script
exec = echo "$(iw dev wlp2s0 link | grep SSID | cut -d " " -f 2- | cut -c1-20)"

# format-foreground = ${colors.color3}

[module/ip]

type = custom/script
exec = ip -4 addr show enp0s31f6 | grep -oP '(?<=inet\s)\d+(\.\d+){3}'


[module/title]
type = internal/xwindow
# format-background = #f00
format-foreground = #f0c674
format-padding = 1
label-maxlen = 50

[module/updates]
type = custom/script
exec = check-updates-packages
tail = true
interval = 900

label = "  %output%   |"

[module/mail]
type = custom/script

; Available tokens:
;   %counter%
; Command to be executed (using "/usr/bin/env sh -c [command]")
; exec = mailcheck
exec = check-mail-unread

; Conditional command that, if defined, needs to exit successfully
; before the main exec command is invoked.
; Default: ""
; exec-if = pgrep -x myservice

; Will the script output continous content?
; Default: false
tail = true

; Seconds to sleep between updates
; Default: 2 (0 if `tail = true`)
interval = 10

label = "  %output%   |"


