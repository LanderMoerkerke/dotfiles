[bar/bar]
font-0 = "Open sans:pixelsize=10;2.25"
font-1 = "Overpass Mono Light:pixelsize=10;2.25"
font-2 = FontAwesome5Pro:size=9:dpi=138;2
font-3 = FontAwesome:size=9:dpi=138;2

monitor = ${env:MONITOR:}

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

fixed-center = true

width = 100%
height = 25

background = #1c1c1c
foreground = #d0d0d0

radius = 0.0

line-size = 1
line-color = #f00

padding-left = 1
padding-right = 1

module-margin = 2
modules-left = i3 eth wlan vpn
modules-center = date
modules-right = gpg syncing updates mail cpu memory temperature battery volume

tray-position = right

[module/i3]
type = internal/i3
format = <label-state>
index-sort = true
pin-workspaces = true
strip-wsnumbers = true
fuzzy-match	= true

label-visible = %icon%
