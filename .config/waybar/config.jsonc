{
    "layer": "top",
    "height": 26,
    "margin": 5,
    "modules-left": [
        "niri/workspaces",
        "custom/lyrics"
    ],
    "modules-center": [
        // "hyprland/window"
        "image#album-art",
        "mpris"
    ],
    "modules-right": [
        "custom/mail",
        "custom/updates",
        "temperature",
        "cpu",
        "memory",
        "network",
        "pulseaudio",
        "custom/noisetorch",
        "backlight",
        "battery",
        "battery#bat2",
        "tray",
        "clock"
    ],
    "custom/lyrics": {
        "exec": "~/.config/waybar/custom/spotify/show-lyrics.sh",
        "interval": 1,
        "format": "â™ª {}",
        "max-length": 100
    },
    "custom/noisetorch": {
        "exec": "~/.config/waybar/custom/noisetorch/check-noisetorch-connected",
        "interval": 5,
        "format": "ï€¥ NT",
    },
    "custom/updates": {
        "exec": "~/.config/waybar/custom/packages/check-updates-packages",
        "interval": 5,
        "exec-if": "[ -s /tmp/packages_updates ]",
        "format": "ï†‡ {}",
        "return-type": "json"
    },
    "custom/mail": {
