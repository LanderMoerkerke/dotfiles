# Basic {{{1 -
super + d
    rofi -show drun -terminal $TERMINAL -width 25
super + shift + d
    rofi -show run -terminal $TERMINAL -width 25
super + BackSpace
    flash-active &> /dev/null
super + shift + BackSpace
    transset-df -a -t 0.9 &> /dev/null
super + Tab
    rofi -show window -width 25
super + shift + e
    rofi-emoji
super + x
    lockscreen
super + shift + x
    systemctl hibernate
# 1}}} -

super + s
    picom-invert-toggle

# Applications {{{1 -
super + Return
    $TERMINAL
super + shift + Return
    samedir
super + r
    $TERMINAL -e lf
super + w
   $FILEMANAGER2
super + shift + v
    $TERMINAL -e nvim
super + shift + s
    systray-toggle
super + b
    $BROWSER
super + shift + b
    $BROWSER2
super + shift + m
    caprine
super + p
    gopass ls --flat | dmenu -i | xargs --no-run-if-empty gopass show -c
# 1}}} -

# Scripts {{{1 -
super + shift + c
    open-config
super + shift + w
    wg-actions
# 1}}} -

# Specials {{{1 -
super + Next
    variety -n
super + Prior
    variety -p
super + Insert
    showclip
Print
    scrot ~/Pictures/Screenshots/%Y-%m-%d-%T-screenshot.png
shift + Print
    scrot -u ~/Pictures/Screenshots/%Y-%m-%d-%T-screenshot.png
control + Print
    maim -u --format=png /dev/stdout | xclip -selection clipboard -t image/png -i
control + shift + Print
    crop-screenshot
# 1}}} -

mod1 + {Home, End, Insert}
    playerctl {previous, play-pause, next}

# Function keys - super {{{1 -
super + {_,shift +}F1
    notify-send {"DUNST_COMMAND_PAUSE", "DUNST_COMMAND_RESUME"}
# 1}}} -

# Function keys - mod1 {{{1 -
mod1 + F1
    pactl set-sink-mute bluez_sink.CC_98_8B_93_3A_17.a2dp_sink toggle
mod1 + {F2,F3}
    pactl -- set-sink-volume bluez_sink.CC_98_8B_93_3A_17.a2dp_sink {-,+}5%
mod1 + F4
    echo "power on\nconnect CC:98:8B:93:3A:17" | bluetoothctl && pactl -- set-sink-volume bluez_sink.CC_98_8B_93_3A_17.a2dp_sink 100%
mod1 + shift + F4
    pactl set-source-mute alsa_input.pci-0000_00_1f.3.analog-stereo toggle
mod1 + F5
    brightness-menu
mod1 + {_,shift +}F6
    picom-invert -{A,D}r
mod1 + F6
    control-sonos
mod1 + F7
    autorandr --change
# 1}}} -

# Other {{{1 -
super + {_,shift +} g
    echo {$EMAIL_PRIMARY,$EMAIL_SECONDARY} | xclip -selection clipboard -selection clipboard
# 1}}} -

# Mediakeys {{{1 -
XF86PowerOff
    power-menu
XF86Audio{Raise,Lower}Volume
    pactl -- set-sink-volume alsa_output.pci-0000_00_1f.3.analog-stereo {+,-}1%
XF86AudioMute
    pactl set-sink-mute alsa_output.pci-0000_00_1f.3.analog-stereo toggle
XF86AudioMicMute
    pactl set-source-mute alsa_input.pci-0000_00_1f.3.analog-stereo toggle
XF86Audio{Next,Prev}
    playerctl {next,previous}
XF86Audio{Play,Pause}
    playerctl {play,pause}
{XF86MonBrightnessUp,XF86MonBrightnessDown}
    light {-A,-U} 3
XF86Display
    displayselect
# 1}}} -
