# Basic {{{1 -
super + d
    rofi -show drun -terminal $TERMINAL -width 25
super + BackSpace
    flash-active
super + shift + BackSpace
    transset-df -a -t 0.9
super + Tab
    rofi -show window -width 25
super + shift + e
    rofi-emoji
super + x
    lockscreen
super + shift + x
    systemctl hibernate
# 1}}} -

# Applications {{{1 -
super + Return
    $TERMINAL
super + shift + Return
    samedir
super + r
    $TERMINAL -e lf
super + w
   $FILEMANAGER2
super + shift + v
    $TERMINAL -e nvim
super + b
    $BROWSER
super + shift + b
    $BROWSER2
super + p
    gopass ls --flat | dmenu -i | xargs --no-run-if-empty gopass show -c
# 1}}} -

# Scripts {{{1 -
super + shift + c
    open-config
super + shift + w
    wg-actions
super + shift + s
    launch-project
# 1}}} -

# Specials {{{1 -
super + Next
    variety -n
super + Prior
    variety -p
super + Insert
    showclip
Print
    scrot ~/Pictures/Screenshots/%Y-%m-%d-%T-screenshot.png
shift + Print
    scrot -u ~/Pictures/Screenshots/%Y-%m-%d-%T-screenshot.png
control + Print
    maim -u --format=png /dev/stdout | xclip -selection clipboard -t image/png -i
control + shift + Print
    crop-screenshot
# 1}}} -

# Function keys - super {{{1 -
super + F1
    notify-send "DUNST_COMMAND_PAUSE"
super + shift + F1
    notify-send "DUNST_COMMAND_RESUME"
# 1}}} -

# Function keys - mod1 {{{1 -
mod1 + F1
    pactl set-sink-mute 1 toggle
mod1 + F2
    pactl -- set-sink-volume 1 -1%
mod1 + F3
    pactl -- set-sink-volume 1 +1%
mod1 + F4
    echo "power on\nconnect CC:98:8B:93:3A:17" | bluetoothctl
# 1}}} -

# Other {{{1 -
super + g
    echo $EMAIL_PRIMARY | xclip -selection clipboard -selection clipboard
super + shift + g
    echo $EMAIL_SECONDARY | xclip -selection clipboard -selection clipboard
# 1}}} -

# Mediakeys {{{1 -
XF86PowerOff
    power-menu
XF86AudioRaiseVolume
    pactl -- set-sink-volume 0 +1%
XF86AudioLowerVolume
    pactl -- set-sink-volume 0 -1%
XF86AudioMute
    pactl set-sink-mute 0 toggle
XF86AudioNext
    playerctl next
XF86AudioPrev
    playerctl previous
XF86AudioPause
    playerctl pause
XF86AudioPlay
    playerctl play
XF86AudioMicMute
    pactl set-source-mute 1 toggle
XF86MonBrightnessUp
    light -A 3
XF86MonBrightnessDown
    light -U 3
XF86Display
    displayselect
# 1}}} -
