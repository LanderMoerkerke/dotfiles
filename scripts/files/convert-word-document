#!/bin/sh

ext=${1##*.}
out=${2:-/tmp}
extensions="doc docx odt pptx"

if [ -z "$1" ]; then
    echo "- Options: .doc, .docx, .odt"
    exit 1
fi

if ! echo $extensions | grep -w $ext > /dev/null; then
    echo "Provide a word document"
    echo "- Options: .doc, .docx, .odt"
    exit 1
fi

/usr/bin/libreoffice --headless --convert-to pdf --outdir $out "$1"
